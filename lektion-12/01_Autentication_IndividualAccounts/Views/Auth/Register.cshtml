@model _01_Autentication_IndividualAccounts.Models.Forms.RegisterForm

@{
    ViewData["Title"] = "Registrera";
}

<div class="container mt-5">
    <div class="d-flex justify-content-center">
        <div class="col-8">
            <form asp-action="Register">
                <div class="row">
                    <div class="col-6 mb-3">
                        <label asp-for="FirstName" class="form-label"></label>
                        <input asp-for="FirstName" class="form-control">
                        <span asp-validation-for="FirstName" class="form-text text-danger"></span>     
                    </div>
                    <div class="col-6 mb-3">
                        <label asp-for="LastName" class="form-label"></label>
                        <input asp-for="LastName" class="form-control">
                        <span asp-validation-for="LastName" class="form-text text-danger"></span>     
                    </div>
                    <div class="mb-3">
                        <label asp-for="StreetName" class="form-label"></label>
                        <input asp-for="StreetName" class="form-control">
                        <span asp-validation-for="StreetName" class="form-text text-danger"></span>     
                    </div>
                    <div class="col-4 mb-3">
                        <label asp-for="PostalCode" class="form-label"></label>
                        <input asp-for="PostalCode" class="form-control">
                        <span asp-validation-for="PostalCode" class="form-text text-danger"></span>     
                    </div>

                    <div class="col-8 mb-5">
                        <label asp-for="City" class="form-label"></label>
                        <input asp-for="City" class="form-control">
                        <span asp-validation-for="City" class="form-text text-danger"></span>     
                    </div>

                    <div class="mb-3">
                        <label asp-for="Email" class="form-label"></label>
                        <input asp-for="Email" class="form-control" aria-describedby="emailHelp">
                        <span asp-validation-for="Email" class="form-text text-danger"></span>
                        <div id="emailHelp" class="form-text">Vi kommer inte dela med oss av denna information till någon.</div>      
                    </div>
                    <div class="col-6 mb-3">
                        <label asp-for="Password" class="form-label"></label>
                        <input asp-for="Password" class="form-control" aria-describedby="passwordHelp">
                        <span asp-validation-for="Password" class="form-text text-danger"></span>   
                    </div>
                    <div class="col-6 mb-3">
                        <label asp-for="ConfirmPassword" class="form-label"></label>
                        <input asp-for="ConfirmPassword" class="form-control" aria-describedby="passwordHelp">
                        <span asp-validation-for="ConfirmPassword" class="form-text text-danger"></span>   
                    </div>
                    <div class="form-text text-center text-danger mb-3">
                        @ViewData["ErrorMessage"]
                    </div>
                    <div class="d-grid mb-3">
                        <button type="submit" class="btn btn-primary">@ViewData["Title"]</button>
                    </div>

                    <div class="d-grid">
                        <a asp-controller="Auth" asp-action="Login">Redan medlem?</a>
                    </div>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
